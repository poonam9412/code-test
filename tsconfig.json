{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "preserveConstEnums": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "resolveJsonModule":true
    }, 
    
    "include": [
        "./src/**/*", "routes/routes.js"
    ]
}
